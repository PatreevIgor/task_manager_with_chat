<div class="thumbnail">
  <div class="caption">
    <%= form_for("send", method: "post") do |f| %>
      <div class="form-group">
        <%=f.text_field :board_title, class: "form-control", placeholder: "Board name", required: true, autocomplete: 'off' %>
      </div>
      <div class="form-group">
        <%= f.email_field :inviting_user, class: "form-control" ,size: "auto x2", placeholder:"Email" ,required: true, autocomplete: 'off' %>
      </div>
      <%= f.submit "Send",class: "btn btn-success btn-block" %>
    <% end %>
  </div>
</div>
