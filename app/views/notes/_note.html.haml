= render 'shared/delete_confirmation', object_type: 'note', path: board_list_note_path(@board, list, note), modal_id: note.object_id
= render 'notes/edit_note', note: note, modal_id: "#{note.object_id}", list: list
= render 'notes/move_note', note: note, modal_id: "#{note.object_id}", list: list
.panel.panel-default
  - if !list.is_disabled
    .col-md-3
      = link_to "#delete_#{note.object_id}", 'data-toggle': 'modal' do
        .fa.fa-times
      = link_to "#edit_#{note.object_id}", 'data-toggle': 'modal' do
        .fa.fa-pencil
      = link_to "#move_#{note.object_id}", 'data-toggle': 'modal' do
        .fa.fa-location-arrow
    %br
  .panel-body.scrollable.note
    %span= simple_format(note.text)
