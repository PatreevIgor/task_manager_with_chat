<div class="container">
  <div class="row" >
    <div class="col-sm-6" >
      <div class="panel panel-default">
        <div class="panel-heading">List of invites</div>
      </div>
        <table class="table">
              <thead>
                <tr>
                  <th>Board name</th>
                  <th>Email</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
          <% @invite.each do |i| %>
            <tr>
              <td><%= Board.find(i.board_id).title %></td>
              <td><%= User.find(i.invitor_id).email %></td>
              <td>
                <%= link_to "Confirm","#", class:"btn btn-success" %>
                <%= link_to "Reject",inviting_path(inviting_id: i.id), method: :delete, class:"btn btn-danger" %>
              </td>
            </tr>
    <% end %>
              </tbody>
        </table>
      </div>
    <div class="col-sm-4" >
      <div class="panel panel-default">
        <div class="panel-heading">Invite</div>
      </div>
      <%= render 'shared/invite_form' %>
    </div>
    <div class="col-sm-4" >
    </div>
  </div>
</div>
